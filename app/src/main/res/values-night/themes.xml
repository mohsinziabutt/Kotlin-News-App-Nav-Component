<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NewsApp" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray_light</item>
        <item name="colorPrimaryVariant">@color/gray_medium</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray_medium</item>
        <item name="colorSecondaryVariant">@color/gray_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>


        <!-- Customize your theme here. -->
    </style>

    <!-- custom theme for editText -->
    <style name="Theme.TextLabelDummy" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/black</item>  // Text Color
        <item name="android:textColorHint">@color/gray_medium</item>    // Hint Color
        <item name="colorControlActivated">@color/gray_dark</item>    //Floating label color
    </style>
</resources>